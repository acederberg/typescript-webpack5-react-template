{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "strict" : true,
    "alwaysStrict" : true,
    "noFallthroughCasesInSwitch" : true,
    "noImplicitAny" : false,
    "noUnusedLocals" : true,
    "noUnusedParameters" : true,
    "forceConistantCasingInFileNames" : true,
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "ESNext",
    "sourceMap": true
  },
  "include": ["src"]
}

